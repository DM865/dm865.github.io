\ifbeamer@subsecheader
\defbeamertemplate*{headline}{split theme}
{%
  \leavevmode%
  \@tempdimb=2.4375ex%
  \ifnum\beamer@subsectionmax<\beamer@sectionmax%
    \multiply\@tempdimb by\beamer@sectionmax%
  \else%
    \multiply\@tempdimb by\beamer@subsectionmax%
  \fi%
  \ifdim\@tempdimb<4ex%
  \@tempdimb=6ex
\fi
  \ifdim\@tempdimb>0pt%
    \advance\@tempdimb by 7ex%1.125ex%
    \begin{beamercolorbox}[wd=0.59\paperwidth,ht=\@tempdimb]{frametitle}
      \end{beamercolorbox}%
    \begin{beamercolorbox}[wd=.20\paperwidth,ht=\@tempdimb,dp=0ex,right]{section in head/foot}%
      \vbox to\@tempdimb{\vfil\insertsectionnavigation{.20\paperwidth}\vfil}%
    \end{beamercolorbox}%
    \begin{beamercolorbox}[wd=.20\paperwidth,ht=\@tempdimb,dp=0ex,left]{subsection in head/foot}%
      \vbox to\@tempdimb{\vfil\insertsubsectionnavigation{.20\paperwidth}\vfil}%
    \end{beamercolorbox}%
  \fi%
}
\fi

